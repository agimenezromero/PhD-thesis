  file            = {:home/alex/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Ward, Lafferty - 2004 - The Elusive Baseline of Marine Disease Are Diseases in Ocean Ecosystems Increasing.pdf:pdf},
