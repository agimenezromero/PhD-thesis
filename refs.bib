@article{Bos2007,
  title    = {Ecosystem engineering by annual intertidal seagrass beds: Sediment accretion and modification},
  author   = {Arthur R. Bos and Tjeerd J. Bouma and Geertje L.J. {de Kort} and Marieke M. {van Katwijk}},
