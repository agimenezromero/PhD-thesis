@article{Seekell2013,
  title    = {A fractal-based approach to lake size-distributions},
  author   = {Seekell, D. A. and Pace, M. L. and Tranvik, L. J. and Verpoorter, C.},
  year     = 2013,
  journal  = {Geophysical Research Letters},
