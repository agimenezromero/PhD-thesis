@article{Ward2004,
  title           = {{The Elusive Baseline of Marine Disease: Are Diseases in Ocean Ecosystems Increasing?}},
  author          = {Ward, Jessica R and Lafferty, Kevin D},
  year            = 2004,
  month           = apr,
  journal         = {PLoS Biology},
  publisher       = {Public Library of Science},
