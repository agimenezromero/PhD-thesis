@article{March,
  title    = {Can we save a marine species affected by a highly infective, highly lethal, waterborne disease from extinction?},
  author   = {J.R. García-March and J. Tena and S. Henandis and M. Vázquez-Luis and D. López and C. Téllez and P. Prado and J.I. Navas and J. Bernal and G. Catanese and A. Grau and M. López-Sanmartín and E. Nebot-Colomer and A. Ortega and S. Planes and D. Kersting and S. Jimenez and I. Hendriks and D. Moreno and F. Giménez-Casalduero and M. Pérez and A. Izquierdo and J. Sánchez and N. Vicente and N. Sanmarti and M. Guimerans and J.L. Crespo and J.M. Valencia and J. Torres and A. Barrajon and E. Álvarez and C. Peyran and T. Morage and S. Deudero},
