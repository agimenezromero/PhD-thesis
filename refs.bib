  langid       = {english},
  keywords     = {{EURO}-{CORDEX}, Temperature, Climate Change/Climate Change Impacts, Climate Change, Oceanography, europe, paper {ESCENA} deltas, Geography (general), Nature Conservation, Regional/Spatial Science, Heat wave, Heavy precipitation, Regional climate change, Dry spells, Impact indices},
  file         = {Full Text PDF:/home/maialen/Zotero/storage/XC42BK83/Jacob et al. - 2013 - EURO-CORDEX new high-resolution climate change pr.pdf:application/pdf;Snapshot:/home/maialen/Zotero/storage/NBD2KHER/10.html:text/html}
}
@article{jacob_regional_2020,
