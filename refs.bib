@article{marba,
  title    = {Footprints of climate change on Mediterranean Sea biota},
  author   = {Marbà, Núria and Jordà, Gabriel and Agustí, Susana and Girard, Coraline and Duarte, Carlos M.},
  year     = 2015,
  journal  = {Frontiers in Marine Science},
  volume   = 2,
