@article{VandenBosch2017,
  title    = {The basic reproduction number of vector-borne plant virus epidemics},
  author   = {Frank {Van den Bosch} and Michael J. Jeger},
  year     = 2017,
  journal  = {Virus Research},
  volume   = 241,
  pages    = {196--202},
  doi      = {10.1016/j.virusres.2017.06.014},
