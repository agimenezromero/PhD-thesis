  author   = {Cornara, D. and Saponari, M. and Zeilinger, Adam R. and de Stradis, Angelo and Boscia, Donato and Loconsole, Giuliana and Bosco, Domenico and Martelli, Giovanni P. and Almeida, Rodrigo P. P. and Porcelli, F.},
  year     = 2017,
